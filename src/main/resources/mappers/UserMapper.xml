<?xml version="1.0" encoding="UTF-8"?>
<!-- mapper 설정 -->
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sns.user.dao.UserDAO">

	<select id="selectUserByLoginId" parameterType="string"
		resultType="com.sns.user.model.User">
		SELECT
		`id`
		,`loginId`
		,`password`
		,`name`
		,`email`
		,`createdAt`
		,`updatedAt`
		FROM
		`user`
		WHERE
		`loginId` = #{loginId};
	</select>

	<insert id="insertUserByLoginId"
		parameterType="com.sns.user.model.User">
		INSERT INTO `user`
		(
		`loginId`
		,`password`
		,`name`
		,`email`
		,`createdAt`
		,`updatedAt`
		)
		VALUES
		(
		#{loginId}
		,#{password}
		,#{name}
		,#{email}
		,NOW()
		,NOW()
		)
	</insert>

	<select id="selectUserByLoginIdPassword" parameterType="map"
		resultType="com.sns.user.model.User">
		SELECT
		`id`
		,`loginId`
		,`password`
		,`name`
		,`email`
		,`createdAt`
		,`updatedAt`
		FROM
		`user`
		WHERE
		`loginId` = #{loginId} AND `password` =
		#{password};
	</select>

</mapper>